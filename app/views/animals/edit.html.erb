<h1>Edit Animal</h1>

<% if @animal.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @animal.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<form action='/animals/<%= @animal.id %>' method='post'>
  <input name='_method' type='hidden' value='patch'>

  <label for='animal_name'>Name</label>
  <input id='animal_name' name='animal[name]' type='text' value = "<%= @animal.name %>">

  <button>Update Now</button>
</form>
